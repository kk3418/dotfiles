syntax on
set number
set encoding=utf-8
set hlsearch
set incsearch
set ignorecase
set tabstop=2

set path+=**/*
set wildmenu

set autoindent
set smartindent
set backspace=indent,eol,start
set laststatus=2
set shortmess-=S

hi Search ctermfg=black ctermbg=yellow guifg=black guibg=yellow

inoremap qq <Esc>
nnoremap nh :noh<cr>
